<section class="chat">
  <section class="chat-body">
    <h3 class="h5">Attendant <%= @task.user.first_name %> helping <em><%=@task.author.first_name %></em></h3>
    <div class="p-3 border rounded-top chat-body_items">
      <% @task.messages.each do |message| %>
        <p class="<%=message.user.nil? ? 'text-start' : 'text-end' %> me-5">
          <small class="d-block"><%=message.user.nil? ? message.author.first_name : message.user.first_name %> - <%=l message.created_at, format: :short %></small>
          <span class="chat-body_bubble <%= message.user.nil? ? 'bg-primary text-light' : 'bg-light' %>"><%=message.message %></span>
        </p>
      <% end %>
    </div>
    <%= form_for(Message.new, url: task_messages_path(@task), method: :post, html: {class: 'chat-body_form border border-top-0 rounded-bottom bg-light'}) do |f| %>
      <%= f.label :message, class: 'form-label visually-hidden' %>
      <%= f.text_field :message, class: 'form-control', placeholder: 'Message' %>
      <button class="btn btn-primary" type="submit">Send</button>
    <% end %>
  </section>
</section>
