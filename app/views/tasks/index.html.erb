<h1 class="border-bottom bg-white">Tasks</h1>
<div class="text-center mb-4">
  <%= will_paginate @tasks, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <%= link_to 'New Register', url_for(action: :new), class: 'btn btn-primary' %>
</div>


<%= turbo_stream_from "tasks" %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>#</th>
      <th>Category</th>
      <th>Title</th>
      <th>Completed at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="tasks">
    <%= render @tasks %>
  </tbody>
</table>
